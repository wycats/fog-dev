{
  "compilerOptions": {
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "incremental": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "es2022",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "rootDir": "src",
    "strict": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist",
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
